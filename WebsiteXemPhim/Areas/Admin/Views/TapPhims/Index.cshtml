@model PaginatedList<WebsiteXemPhim.Models.TapPhim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách tập phim</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Thêm tập phim mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Tập</th>
            <th>Link 1</th>
            <th>Link 2</th>
            <th>Thời lượng</th>
            <th>Phim Bộ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Linkdb)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThoiLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhimBo.TenPhim)
                </td>
                <td class="col-md-3" style=" text-align:right;">
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.TapPhimId">Sửa</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.TapPhimId">Chi tiết</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TapPhimId">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <a asp-action="Index"
               asp-route-pageNumber="@(Model.PageIndex - 1)" class="btn btn-default @prevDisabled">
                Trang trước
            </a>
            @for (int i = 1; i <= @Model.TotalPages; i++)
            {
                <li class="page-item @(i == @Model.PageIndex ? "active" : "")">

                    <a class="page-link"
                       href="@Url.Action("Index", new { pageNumber = i })">@i</a>

                </li>
            }
            <a asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)" class="btn btn-default @nextDisabled">
                Trang sau
            </a>
        </ul>
    </nav>
</div>